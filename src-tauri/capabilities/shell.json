{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "shell-capability",
  "description": "Capability for shell command execution",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "check-jest",
          "cmd": "npx",
          "args": [
            "jest",
            "--version"
          ]
        },
        {
          "name": "check-pytest",
          "cmd": "python",
          "args": [
            "-m",
            "pytest",
            "--version"
          ]
        },
        {
          "name": "check-go",
          "cmd": "go",
          "args": [
            "version"
          ]
        },
        {
          "name": "check-java",
          "cmd": "java",
          "args": [
            "-version"
          ]
        },
        {
          "name": "check-dotnet",
          "cmd": "dotnet",
          "args": [
            "--version"
          ]
        },
        {
          "name": "check-rspec",
          "cmd": "gem",
          "args": [
            "list"
          ]
        },
        {
          "name": "check-rust",
          "cmd": "cargo",
          "args": [
            "--version"
          ]
        }
      ]
    }
  ]
} 